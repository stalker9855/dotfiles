#! /usr/bin/sh

chosen=$(printf "󰍹  Monitor\n󰗆  Region\n  Window\n" | rofi -dmenu -i -p "Screenshot menu")

case "$chosen" in 
  "󰍹  Monitor") hyprshot -m output -o $HOME/Pictures/Screenshots/;;
  "󰗆  Region") hyprshot -m region -o $HOME/Pictures/Screenshots/;;
  "  Window") hyprshot -m window -o $HOME/Pictures/Screenshots/;;
	*) exit 1 ;;
esac
